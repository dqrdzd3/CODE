		<!-- 根据条件查询所有  -->
	<select id="retrieveB00907ByPO" resultType="com.hw.hwsafe.corpinfo.pojo.B00907PO">
		SELECT MA001,MA002,MA003,MA004,MA005,MA006
		FROM B00907 t 	
		WHERE 1=1
		<if test="MA001 != null">
			<if test="MA001 != ''">
			AND	MA001 = #{MA001}
			</if>
		</if> 
		<if test="MA003 != null">
			<if test="MA003 != ''">
			AND	MA003  LIKE '%'||#{MA003}||'%' 
			</if>
		</if> 
	</select>
	
	<!-- 插入危险源周边环境信息 -->
	<insert id="insertB00907" parameterType="com.hw.hwsafe.corpinfo.pojo.B00907PO">
      INSERT INTO B00907(MA001,MA002,MA003,MA004,MA005,MA006
	   ) 
      VALUES(
         #{MA001,jdbcType=VARCHAR},#{MA002,jdbcType=VARCHAR},#{MA003,jdbcType=VARCHAR},#{MA004,jdbcType=INTEGER},#{MA005,jdbcType=NUMERIC},#{MA006,jdbcType=VARCHAR}
       )
	</insert>
	<!-- 更新危险源周边环境信息 -->

	<update id="updateB00907" parameterType="com.hw.hwsafe.corpinfo.pojo.B00907PO">
		UPDATE B00907 
		set	
		MA002=#{MA002,jdbcType=VARCHAR},MA003=#{MA003,jdbcType=VARCHAR},MA004=#{MA004,jdbcType=INTEGER},MA005=#{MA005,jdbcType=NUMERIC},MA006=#{MA006,jdbcType=VARCHAR}
		WHERE MA001 = #{MA001}
	</update>

	<!-- 根据主键删除危险源周边环境信息-->
	<delete id="deleteB00907ByID" parameterType="String">
		DELETE FROM B00907 WHERE MA001 = #{MA001}
	</delete>
<!-- 根据条件查询 -->
	<select id="retrieveByPage" parameterType="map" resultType="hashmap">
		SELECT * FROM B00907 
		<where>
			<if test="po.MA003 != null and po.MA003 != ''">
				MA003 like '%' || #{po.MA003} || '%'
			</if>
			<if test="po.MA005 != null and po.MA005 != ''">
				AND MA005 like '%' || #{po.MA005} || '%'
			</if>
		</where>
	</select>
	
	
	<!-- 根据周边环境id查询-->
	<select id="retrieveB00907ByParentID" parameterType="String" resultType="com.hw.hwsafe.corpinfo.pojo.B00907PO">
