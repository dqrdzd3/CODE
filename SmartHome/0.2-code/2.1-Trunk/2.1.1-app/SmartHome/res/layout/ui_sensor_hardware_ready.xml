<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res/com.hw.smarthome"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:id="@+id/uiSensorHardwareLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ui_setting_bg" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ui_setting_bg"
            android:orientation="vertical"
            android:paddingTop="10dip" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/uiSensorHardWarePowerImage"
                    android:layout_width="match_parent"
                    android:layout_height="150dip"
                    android:src="@drawable/ui_sensor_hardware_power_gas" />

                <TextView
                    android:id="@+id/uiSensorHardWarePowerHint"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:includeFontPadding="false"
                    android:padding="10dip"
                    android:text="@string/sensor_wifi_guide"
                    android:textColor="@color/black"
                    android:textSize="14.0sp" />

                <ImageView
                    android:id="@+id/uiSensorHardWareShowImage"
                    android:layout_width="match_parent"
                    android:layout_height="150dip"
                    android:src="@drawable/ui_sensor_hardware_show_gas" />

                <TextView
                    android:id="@+id/uiSensorHardWareHint"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:includeFontPadding="false"
                    android:padding="10dip"
                    android:text="@string/sensor_wifi_guide"
                    android:textColor="@color/black"
                    android:textSize="14.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:paddingBottom="20dip"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <com.beardedhen.androidbootstrap.BootstrapButton
                        android:id="@+id/uiSensorHardwareReturn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sensor_return"
                        android:layout_gravity="left"
                        app:bb_text_gravity="center"
                        bootstrapbutton:bb_roundedCorners="true"
                        bootstrapbutton:bb_size="default"
                        bootstrapbutton:bb_type="danger" />

                    <com.beardedhen.androidbootstrap.BootstrapButton
                        android:id="@+id/uiSensorHardwareNext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sensor_next"
                        android:layout_gravity="right"
                        app:bb_text_gravity="center"
                        bootstrapbutton:bb_roundedCorners="true"
                        bootstrapbutton:bb_size="default"
                        bootstrapbutton:bb_type="success" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>