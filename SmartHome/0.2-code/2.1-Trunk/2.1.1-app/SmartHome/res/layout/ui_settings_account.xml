<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res/com.hw.smarthome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_setting_bg" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="25dip" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip" >

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_marginTop="10.0dip"
                android:gravity="center_vertical"
                android:paddingLeft="4.0dip"
                android:text="@string/account_setting"
                android:textColor="@color/gray"
                android:textSize="16.0sp" />

            <LinearLayout
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginLeft="2.0dip"
                android:layout_marginRight="2.0dip"
                android:background="@color/white"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/headinfo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:maxHeight="50dp"
                    android:maxWidth="50dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/mini_avatar_shadow" />

                <TextView
                    android:layout_width="100dip"
                    android:layout_height="match_parent"
                    android:drawablePadding="10.0dip"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingLeft="17.0dip"
                    android:text="@string/account_nickname"
                    android:textColor="@color/black"
                    android:textSize="16.0sp" />

                <EditText
                    android:id="@+id/accountname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:drawablePadding="10.0dip"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textSize="16.0sp" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name" 
                 android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2.0dip"
                    android:layout_marginRight="2.0dip"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="6.0dip"
                    android:paddingTop="6.0dip" >

                    <TextView
                        android:layout_width="100dip"
                        android:layout_height="match_parent"
                        android:drawablePadding="10.0dip"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:paddingLeft="17.0dip"
                        android:text="@string/account_name"
                        android:textColor="@color/black"
                        android:textSize="16.0sp" />

                    <TextView
                        android:id="@+id/mobileId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:text=""
                        android:textSize="16.0sp" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2.0dip"
                    android:layout_marginRight="2.0dip"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="6.0dip"
                    android:paddingTop="6.0dip" >

                    <TextView
                        android:layout_width="100dip"
                        android:layout_height="match_parent"
                        android:drawablePadding="10.0dip"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:paddingLeft="17.0dip"
                        android:text="邮箱"
                        android:textColor="@color/black"
                        android:textSize="16.0sp" />

                    <AutoCompleteTextView
                        android:id="@+id/accountId"
                        android:layout_width="190sp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5px"
                        android:background="@null"
                        android:hint="邮箱地址"
                        android:inputType="textEmailAddress"
                        android:padding="5px"
                        android:text=""
                        android:textSize="16.0sp" >
                    </AutoCompleteTextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chabtnlayout"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_below="@+id/info" 
                 android:orientation="horizontal">

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/changeInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="修改信息"
                    app:bb_text_gravity="center"
                    bootstrapbutton:bb_roundedCorners="true"
                    bootstrapbutton:bb_size="default"
                    bootstrapbutton:bb_type="info" />
            </LinearLayout>

            <TextView
                android:id="@+id/title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chabtnlayout"
                android:layout_marginBottom="10.0dip"
                android:layout_marginTop="10.0dip"
                android:gravity="center_vertical"
                android:paddingLeft="4.0dip"
                android:text="@string/chg_pw"
                android:textColor="@color/gray"
                android:textSize="16.0sp" />

            <LinearLayout
                android:id="@+id/passtable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title2" 
                android:orientation="vertical"
               
               >

                <LinearLayout
                    android:layout_width="match_parent"
                     android:layout_height="match_parent"
                    android:layout_marginLeft="2.0dip"
                    android:layout_marginRight="2.0dip"
                    android:background="@color/white"
                    android:paddingBottom="10.0dip"
                    android:paddingTop="10.0dip" 
                     android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dip"
                        android:layout_height="match_parent"
                        android:drawablePadding="10.0dip"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:paddingLeft="17.0dip"
                        android:text="@string/pw"
                        android:textColor="@color/black"
                        android:textSize="16.0sp" />

                    <EditText
                        android:id="@+id/chgPw"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/pw_hint"
                        android:inputType="textPassword"
                        android:textSize="16.0sp" >
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                     android:layout_height="match_parent"
                    android:layout_marginLeft="2.0dip"
                    android:layout_marginRight="2.0dip"
                    android:background="@color/white"
                    android:paddingBottom="10.0dip"
                    android:paddingTop="10.0dip" 
                     android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dip"
                        android:layout_height="match_parent"
                        android:drawablePadding="10.0dip"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:paddingLeft="17.0dip"
                        android:text="@string/pw_new"
                        android:textColor="@color/black"
                        android:textSize="16.0sp" />

                    <EditText
                        android:id="@+id/chgPwNew"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/pw_new_hint"
                        android:inputType="textPassword"
                        android:textSize="16.0sp" >
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                     android:layout_height="match_parent"
                    android:layout_marginLeft="2.0dip"
                    android:layout_marginRight="2.0dip"
                    android:background="@color/white"
                    android:paddingBottom="10.0dip"
                    android:paddingTop="10.0dip"
                     android:orientation="horizontal" >

                    <TextView
                        android:layout_width="100dip"
                        android:layout_height="match_parent"
                        android:drawablePadding="10.0dip"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:paddingLeft="17.0dip"
                        android:text="@string/pw_new_repeat"
                        android:textColor="@color/black"
                        android:textSize="16.0sp" />

                    <EditText
                        android:id="@+id/pwNewRepeat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/pw_new_repeat_hint"
                        android:inputType="textPassword"
                        android:textSize="16.0sp" >
                    </EditText>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_below="@+id/passtable"
                android:orientation="vertical" >

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/changepw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pw_submit"
                    app:bb_text_gravity="center"
                    bootstrapbutton:bb_roundedCorners="true"
                    bootstrapbutton:bb_size="default"
                    bootstrapbutton:bb_type="info" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>