            android:textSize="16.0sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:background="@color/white"
            android:id="@+id/layout_developer">

        </TableLayout>
    </LinearLayout>
</ScrollView>
