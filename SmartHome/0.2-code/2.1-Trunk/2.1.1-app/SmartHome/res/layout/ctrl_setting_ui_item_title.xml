<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:layout_marginBottom="2dp"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <!-- A1传感器值 bgn -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_weight="1.2"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/ctrl_item_title_sensor_name"
            android:textColor="@color/ctrl_item_title_txt"
            android:textSize="20sp" />
    </LinearLayout>
    <!-- A1传感器值 end -->


    <!-- A1控制阀值 bgn -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/ctrl_item_title_open_name"
            android:textColor="@color/ctrl_item_title_txt"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/ctrl_item_title_off_name"
            android:textColor="@color/ctrl_item_title_txt"
            android:textSize="20sp" />
    </LinearLayout>
    <!-- A1控制阀值 end -->


    <!-- A1联动设备 bgn 组多只能添加三个设备 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:orientation="vertical" >
         <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/ctrl_item_title_ctrl_name"
            android:textColor="@color/ctrl_item_title_txt"
            android:textSize="20sp" />
    </LinearLayout>
    <!-- A1联动设备end -->

</LinearLayout>