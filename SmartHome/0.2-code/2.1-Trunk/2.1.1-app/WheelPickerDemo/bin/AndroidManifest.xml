<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="antistatic.spinnerwheel.demo"
      android:versionCode="1"
      android:versionName="1.0">

    <uses-sdk
            android:minSdkVersion="8"
            android:targetSdkVersion="19" />

    <application
            android:icon="@drawable/ic_launcher_demo"
            android:label="Spinner wheel demo"
            android:theme="@style/WheelDemoTheme.Light">

        <activity android:name="antistatic.spinnerwheel.demo.WheelDemo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TimePickerActivity" android:label="Time picker">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="antistatic.spinnerwheel.WHEEL_SAMPLE"/>
            </intent-filter>
        </activity>
        <activity android:name=".TimePickerCustomViewsActivity" android:label="Time picker with custom views">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="antistatic.spinnerwheel.WHEEL_SAMPLE"/>
            </intent-filter>
        </activity>
        <activity android:name=".ProgrammaticSwitchingActivity" android:label="Programmatic switching (shuffle)">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="antistatic.spinnerwheel.WHEEL_SAMPLE"/>
            </intent-filter>
        </activity>
        <activity android:name="antistatic.spinnerwheel.demo.CitiesActivity" android:label="Repopulating data">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="antistatic.spinnerwheel.WHEEL_SAMPLE"/>
            </intent-filter>
        </activity>

    </application>


</manifest>