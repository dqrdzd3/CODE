                <TextView
                    android:id="@+id/matchDown2Status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="2dip"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/matchDown2Rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="2dip"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/matchDown3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/match_down_3"
                android:clickable="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/matchDown3Content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="2dip"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/matchDown3Status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="2dip"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/matchDown3Rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
