<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="fill_parent"    android:layout_height="fill_parent"    android:background="@color/white"    android:fitsSystemWindows="false">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:gravity="center"        android:orientation="vertical"        android:paddingTop="50dp" >        <ImageView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:src="@drawable/about_logo_img" />        <ImageView            android:id="@+id/logoImage"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginTop="10.0dip"            android:src="@drawable/about_logo_text" />        <TextView            android:id="@+id/versionText"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginTop="10.0dip"            android:text="@string/version"            android:textColor="@color/gray"            android:textSize="16.0sp" />        <Button            android:id="@+id/checkText"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginTop="10.0dip"            android:text="检查更新"            android:background="@null"            android:textColor="#5bc0de"            android:textSize="22.0sp" />    </LinearLayout>    <TextView        android:id="@+id/aboutWeb"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_alignParentBottom="true"        android:layout_centerHorizontal="true"        android:layout_marginBottom="45.0dip"        android:text="www.hanwei.cn"        android:textColor="@color/gray"        android:textSize="14.0sp" />    <TextView        android:id="@+id/contactsUsText"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_above="@+id/aboutWeb"        android:layout_centerHorizontal="true"        android:layout_marginBottom="10.0dip"        android:text="河南汉威电子股份有限公司"        android:textColor="@color/gray"        android:textSize="14.0sp" />     <TextView        android:id="@+id/rq"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_above="@+id/contactsUsText"        android:layout_centerHorizontal="true"        android:layout_marginBottom="10.0dip"        android:text="2014/09/01"        android:textColor="@color/gray"        android:textSize="14.0sp" /></RelativeLayout>